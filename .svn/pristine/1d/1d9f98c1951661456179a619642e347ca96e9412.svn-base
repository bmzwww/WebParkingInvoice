

<div class="well">
    <h2>@ViewBag.Title</h2>
    <p class="lead">@ViewBag.Message</p>
    <div ng-controller="InvoicesController">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Invoice number
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Invoice Date
                    </th>
                    <th>
                        Due Date
                    </th>
                    <th>
                        Balance
                    </th>
                
                    <th>
                        Status
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr role="row" ng-repeat="i in Invoices">
                    <td>
                        {{ $index + 1}}
                    </td>
                    <td>
                       <a href="~/Home/Invoice/{{i.Number}}"> {{ i.Number }}</a>
                    </td>
                    <td>
                        {{ i.Customer.Name }}
                    </td>
                    <td>
                        {{ i.Details }}
                    </td>
                    <td>
                        {{ i.InvoiceDate }}
                    </td>
                    <td>
                        {{ i.DueDate }}
                    </td>
                    <td>
                        {{ i.Balance }}
                    </td>
                    <td>
                        {{ i.StatusStr }}
                    </td>
                    <td>
                        <a class="btn btn-success btn-xs" href="~/Home/Invoice/{{i.Number}}">Details &raquo;</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
      
