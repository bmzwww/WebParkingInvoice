

<div class="well">
    <h2> @ViewBag.Title</h2>
    <p class="lead">@ViewBag.Message</p>
    <div class="table-responsive" ng-controller="IndexController">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Agreement Code
                    </th>
                    <th>
                        Place
                    </th>
                    <th>
                        Month
                    </th>
                    @*<th>
                            Period start
                        </th>
                        <th>
                            Period end
                        </th>*@
                    <th>
                        07:00 - 19:00
                    </th>
                    <th>
                        19:00 - 07:00
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr role="row" ng-repeat="p in ParkInfo.Items">
                    <td>
                        {{$index + 1}}
                    </td>
                    <td>
                        <a href="~/Home/Customer/{{p.Customer.ID}}">{{ p.Customer.Name }}</a>
                    </td>
                    <td>
                        {{ p.ParkHouse.Name }}
                    </td>
                    <td>
                        {{ p.Details }}
                    </td>
                    @*<td>
                            {{ p.PeriodStart }}
                        </td>
                        <td>
                            {{  p.PeriodEnd }}
                        </td>*@
                    <td>
                        {{  p.DayAmount }}
                    </td>
                    <td>
                        {{  p.NightAmount }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <a href="~/Home/Invoices/" class="btn btn-primary btn-sm">See Invoices &raquo;</a>

    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

